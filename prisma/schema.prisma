generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
enum Role {
  manufacturer
  store
}
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  role          Role
  storeId       String?
  store         Store?   @relation("StoreUsers", fields: [storeId], references: [id])
  manufacturerStores Store[] @relation("ManufacturerStores")

  createdAt     DateTime @default(now())
}

model Product {
  id          String           @id @default(cuid())
  name        String           @unique
  inventory   StoreInventory[]

  createdAt  DateTime         @default(now())
}

model Store {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  manufacturerId String
  manufacturer  User     @relation("ManufacturerStores", fields: [manufacturerId], references: [id])
  users         User[]   @relation("StoreUsers")
  inventory     StoreInventory[]

  createdAt     DateTime @default(now())
}

model StoreInventory {
  id              String   @id @default(cuid())
  storeId         String
  productId       String
  initialQuantity Int
  currentQuantity Int
  store           Store    @relation(fields: [storeId], references: [id])
  product         Product  @relation(fields: [productId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([storeId, productId])
}


